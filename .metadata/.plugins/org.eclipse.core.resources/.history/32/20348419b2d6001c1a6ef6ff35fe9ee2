				okButton.addMouseListener(new MouseAdapter() {
					@Override
					public void mouseClicked(MouseEvent e) {
						
					}
				});
				okButton.addActionListener(new ActionListener() {
					
					@Override
					public void actionPerformed(ActionEvent e) {
						Sauce sauce = Sauce.valueOf((String)cboSAUCE.getSelectedItem());
						savePizzaDetail(123,(Sauce)cboSAUCE.getSelectedItem(), Base.gluten, Size.large, Topping.sauage_sizzle);
						System.err.println("我點了SAVE按鈕");
						
					}
